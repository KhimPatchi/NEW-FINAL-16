@page
@model RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Register</title>

    <!-- Bootstrap 4 -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-size: 1.3rem;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 1400px;
        }

        h1 {
            font-size: 3.2rem;
            font-weight: 700;
        }

        .input-group-text {
            font-size: 1.5rem;
            padding: 0.75rem 1rem;
        }

        .form-control {
            height: calc(3rem + 2px);
            font-size: 1.3rem;
        }

        .btn {
            font-size: 1.3rem;
            padding: 1rem;
        }

        .form-group {
            margin-bottom: 2rem;
        }

        .input-group {
            margin-bottom: 2rem;
        }

        .img-fluid {
            max-width: 100%;
            height: auto;
        }

        .text-muted {
            font-size: 1.2rem;
        }

        .px-4 {
            padding-left: 2rem !important;
            padding-right: 2rem !important;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row align-items-center">
            <!-- Left Side -->
            <div class="col-lg-5 mb-5">
                <img src="~/images/logo-New.png" alt="Register Illustration" class="img-fluid mb-4 d-none d-lg-block" />

                <h1>Create an Account</h1>
               
            </div>

            <!-- Right Side -->
            <div class="col-lg-7">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-4"></div>
                    <div class="form-row">
                        <!-- EmpNo -->
                        <div class="col-md-6 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white border-md border-right-0">
                                    <i class="fa fa-id-badge text-muted"></i>
                                </span>
                            </div>
                            <input asp-for="Input.EmpNo" placeholder="Employee ID" class="form-control bg-white border-left-0 border-md" />
                        </div>

                        <!-- Username -->
                        <div class="col-md-6 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white border-md border-right-0">
                                    <i class="fa fa-user text-muted"></i>
                                </span>
                            </div>
                            <input asp-for="Input.UserName" placeholder="Username" class="form-control bg-white border-left-0 border-md" />
                        </div>

                        <!-- Name -->
                        <div class="col-md-4 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user text-muted"></i></span>
                            </div>
                            <input asp-for="Input.First_Name" placeholder="First Name" class="form-control bg-white border-left-0 border-md" />
                        </div>
                        <div class="col-md-4 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user text-muted"></i></span>
                            </div>
                            <input asp-for="Input.Middle_Name" placeholder="Middle Name" class="form-control bg-white border-left-0 border-md" />
                        </div>
                        <div class="col-md-4 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user text-muted"></i></span>
                            </div>
                            <input asp-for="Input.Last_Name" placeholder="Last Name" class="form-control bg-white border-left-0 border-md" />
                        </div>

                        <!-- Age -->
                        <div class="col-md-4 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-hourglass-start text-muted"></i></span>
                            </div>
                            <input asp-for="Input.Age" placeholder="Age" class="form-control bg-white border-left-0 border-md" />
                        </div>

                        <!-- Gender -->
                        <div class="col-md-4 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-venus-mars text-muted"></i></span>
                            </div>
                            <select asp-for="Input.Gender" class="form-control bg-white border-left-0 border-md">
                                <option value="">Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>

                        <!-- Phone -->
                        <div class="col-md-4 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-phone text-muted"></i></span>
                            </div>
                            <input asp-for="Input.PhoneNumber" placeholder="Phone Number" class="form-control bg-white border-left-0 border-md" />
                        </div>

                        <!-- Email -->
                        <div class="col-md-6 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-envelope text-muted"></i></span>
                            </div>
                            <input asp-for="Input.Email" placeholder="Email Address" class="form-control bg-white border-left-0 border-md" />
                        </div>

                        <!-- Date of Birth -->
                        <div class="col-md-6 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-calendar-alt text-muted"></i></span>
                            </div>
                            <input asp-for="Input.DateOfBirth" type="date" class="form-control bg-white border-left-0 border-md" />
                        </div>

                        <!-- Address -->
                        <div class="col-md-12 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-map-marker-alt text-muted"></i></span>
                            </div>
                            <input asp-for="Input.Address" placeholder="Address" class="form-control bg-white border-left-0 border-md" />
                        </div>

                        <!-- Password -->
                        <div class="col-md-6 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-lock text-muted"></i></span>
                            </div>
                            <input asp-for="Input.Password" type="password" placeholder="Password" class="form-control bg-white border-left-0 border-md" />
                        </div>

                        <!-- Confirm Password -->
                        <div class="col-md-6 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-lock text-muted"></i></span>
                            </div>
                            <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm Password" class="form-control bg-white border-left-0 border-md" />
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-block">Create your account</button>
                    </div>

                    <!-- Login Prompt -->
                    <div class="text-center">
                        <p class="text-muted font-weight-bold">
                            Already Registered?
                            <a asp-page="/Account/Login" class="text-primary ml-2">Login</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            $(function () {
                $('input, select').on('focus', function () {
                    $(this).parent().find('.input-group-text').css('border-color', '#80bdff');
                });
                $('input, select').on('blur', function () {
                    $(this).parent().find('.input-group-text').css('border-color', '#ced4da');
                });
            });
        </script>
    }
</body>
</html>
