<section class="relative overflow-hidden min-h-[600px] flex items-center" id="home">
    <div class="absolute inset-0 z-0">
        <img src="https://readdy.ai/api/search-image?query=diverse%20group%20of%20people%20helping%20each%20other%20in%20community%2C%20support%20and%20care%2C%20soft%20lighting%2C%20professional%20government%20service%20setting%2C%20modern%20office%20environment%2C%20warm%20and%20welcoming%20atmosphere%2C%20high%20end%20photography&width=1920&height=1080&seq=1&orientation=landscape"
             alt="Hero Background"
             class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-primary/60"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
            <div class="text-white">
                <h2 class="text-4xl md:text-5xl font-bold mb-6">
                    Empowering Communities Through Care & Support
                </h2>
                <p class="text-xl mb-8 opacity-90">
                    Dedicated to providing essential welfare services and creating
                    positive change in the lives of our community members.
                </p>
                <div class="flex flex-wrap gap-4">
                    <a href="#services" class="bg-white text-primary px-8 py-3 font-medium !rounded-button hover:bg-secondary hover:text-primary transition-colors whitespace-nowrap inline-block text-center">
                        Get Started
                    </a>
                </div>

            </div>
            <div class="hidden md:block">
                <div class="bg-white/90 p-8 rounded-lg shadow-xl">
                    <h3 class="text-2xl font-bold text-primary mb-6">
                        Quick Services
                    </h3>
                    <div class="space-y-4">
                        <a asp-controller="ApplicationFoodPacks" asp-action="FoodPackPending"
                           class="flex items-center p-4 bg-secondary/50 rounded hover:bg-secondary transition-colors">
                            <i class="ri-heart-line text-2xl text-primary mr-4"></i>
                            <div>
                                <h4 class="font-medium text-primary">Food Assistance</h4>
                                <p class="text-sm text-gray-600">
                                    Emergency food support for families
                                </p>
                            </div>
                        </a>

                        <a asp-controller="Consultations" asp-action="ConsultationPending"
                           class="flex items-center p-4 bg-secondary/50 rounded hover:bg-secondary transition-colors">
                            <i class="ri-team-line text-2xl text-primary mr-4"></i>
                            <div>
                                <h4 class="font-medium text-primary">Family Services</h4>
                                <p class="text-sm text-gray-600">
                                    Support for parents and children
                                </p>
                            </div>
                        </a>

                        <a asp-controller="Certificate_Of_Indigency" asp-action="CertificateOfIndigencyPending"
                           class="flex items-center p-4 bg-secondary/50 rounded hover:bg-secondary transition-colors">
                            <i class="ri-file-list-3-line text-2xl text-primary mr-4"></i>
                            <div>
                                <h4 class="font-medium text-primary">Documentation</h4>
                                <p class="text-sm text-gray-600">
                                    Certificate requests and processing
                                </p>
                            </div>
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- Service Cards Section -->
<section class="py-16" id="services">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-12">
            Our Services
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Food Pack Application Card -->
            <div class="bg-white rounded shadow-lg border-t-4 border-primary overflow-hidden transition-transform hover:transform hover:scale-105">
                <div class="p-6">
                    <div class="w-16 h-16 bg-secondary rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="ri-shopping-basket-2-line text-primary text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-primary text-center mb-3">
                        Food Pack Application
                    </h3>
                    <p class="text-gray-600 mb-6 text-center">
                        Apply for emergency food assistance packages for your family
                        during times of need.
                    </p>
                    <ul class="mb-6 text-sm text-gray-700">
                        <li class="flex items-start mb-2">
                            <span class="w-5 h-5 flex items-center justify-center mr-2 mt-0.5">
                                <i class="ri-check-line text-primary"></i>
                            </span>
                            <span>Available for low-income families</span>
                        </li>
                        <li class="flex items-start mb-2">
                            <span class="w-5 h-5 flex items-center justify-center mr-2 mt-0.5">
                                <i class="ri-check-line text-primary"></i>
                            </span>
                            <span>Contains essential food items</span>
                        </li>
                        <li class="flex items-start">
                            <span class="w-5 h-5 flex items-center justify-center mr-2 mt-0.5">
                                <i class="ri-check-line text-primary"></i>
                            </span>
                            <span>Monthly distribution schedule</span>
                        </li>
                    </ul>
                    <div class="text-center">
                        <a asp-controller="ApplicationFoodPacks" asp-action="FoodPackPending"
                           class="bg-primary text-white px-6 py-2 font-medium rounded-button hover:bg-primary/90 transition-colors whitespace-nowrap text-decoration-none inline-flex items-center">
                            Apply Now
                        </a>

                    </div>
                </div>
            </div>
            <!-- Solo Parent Consultation Card -->
            <div class="bg-white rounded shadow-lg border-t-4 border-primary overflow-hidden transition-transform hover:transform hover:scale-105">
                <div class="p-6">
                    <div class="w-16 h-16 bg-secondary rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="ri-parent-line text-primary text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-primary text-center mb-3">
                        Solo Parent Consultation
                    </h3>
                    <p class="text-gray-600 mb-6 text-center">
                        Access specialized support services and guidance for single
                        parents in our community.
                    </p>
                    <ul class="mb-6 text-sm text-gray-700">
                        <li class="flex items-start mb-2">
                            <span class="w-5 h-5 flex items-center justify-center mr-2 mt-0.5">
                                <i class="ri-check-line text-primary"></i>
                            </span>
                            <span>Legal advice and assistance</span>
                        </li>
                        <li class="flex items-start mb-2">
                            <span class="w-5 h-5 flex items-center justify-center mr-2 mt-0.5">
                                <i class="ri-check-line text-primary"></i>
                            </span>
                            <span>Parenting workshops</span>
                        </li>
                        <li class="flex items-start">
                            <span class="w-5 h-5 flex items-center justify-center mr-2 mt-0.5">
                                <i class="ri-check-line text-primary"></i>
                            </span>
                            <span>Financial support programs</span>
                        </li>
                    </ul>
                    <div class="text-center">
                        <a asp-controller="Consultations" asp-action="ConsultationPending"
                           class="bg-primary text-white px-6 py-2 font-medium rounded-button hover:bg-primary/90 transition-colors whitespace-nowrap text-decoration-none inline-flex items-center fw-bold">
                            Book Consultation
                        </a>

                    </div>
                </div>
            </div>
            <!-- Certificate of Indigency Card -->
            <div class="bg-white rounded shadow-lg border-t-4 border-primary overflow-hidden transition-transform hover:transform hover:scale-105">
                <div class="p-6">
                    <div class="w-16 h-16 bg-secondary rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="ri-file-list-3-line text-primary text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-primary text-center mb-3">
                        Certificate of Indigency
                    </h3>
                    <p class="text-gray-600 mb-6 text-center">
                        Request official documentation certifying low-income status for
                        various assistance programs.
                    </p>
                    <ul class="mb-6 text-sm text-gray-700">
                        <li class="flex items-start mb-2">
                            <span class="w-5 h-5 flex items-center justify-center mr-2 mt-0.5">
                                <i class="ri-check-line text-primary"></i>
                            </span>
                            <span>Required for medical assistance</span>
                        </li>
                        <li class="flex items-start mb-2">
                            <span class="w-5 h-5 flex items-center justify-center mr-2 mt-0.5">
                                <i class="ri-check-line text-primary"></i>
                            </span>
                            <span>Used for educational subsidies</span>
                        </li>
                        <li class="flex items-start">
                            <span class="w-5 h-5 flex items-center justify-center mr-2 mt-0.5">
                                <i class="ri-check-line text-primary"></i>
                            </span>
                            <span>Valid for 6 months</span>
                        </li>
                    </ul>
                    <div class="text-center">
                        <a asp-controller="Certificate_Of_Indigency" asp-action="CertificateOfIndigencyPending"
                           class="bg-primary text-white px-6 py-2 font-medium rounded-button hover:bg-primary/90 transition-colors whitespace-nowrap text-decoration-none inline-flex items-center fw-bold">
                            Request Certificate
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
