@{
    ViewData["Title"] = "Home Page";
}





<!-- services section start -->
<div id="services" class="services_section layout_padding" style="background-color: #ffffff; padding: 60px 0;">
    <div class="container">
        <h1 class="services_taital text-center" style="color: #003049; font-weight: bold; font-size: 2.8rem;">
            Our Services
        </h1>
        <p class="many_taital text-center" style="color: #555; font-size: 1.2rem;">
            Providing essential services to support our community's well-being.
        </p>

        <div class="services_section2 mt-5 px-3">
            <div class="row g-4 justify-content-center">
                <!-- Food Packs Card -->
                <div class="col-lg-4 col-md-6 d-flex justify-content-center my-3">
                    <div class="card text-center border-0 shadow position-relative pt-6" style="width: 18rem; padding-top: 4.5rem;">
                        <!-- Floating Icon -->
                        <div class="card-icon position-absolute start-50 translate-middle-x rounded-circle p-3 bg-white border shadow" style="top: -25px;">
                            <img src="images/FoodPacks.png" alt="Food Packs Icon" class="img-fluid" style="width: 50px; height: 50px;">
                        </div>
                        <div class="card-body d-flex flex-column justify-content-between px-3 pb-4 mt-3">
                            <h5 class="card-title fw-bold mb-3" style="color: #003049;">Food Packs</h5>
                            <p class="card-text flex-grow-1" style="font-size: 1rem;">
                                We are honored to distribute these food packs as part of our commitment to supporting our community.
                            </p>
                            <hr class="text-secondary my-3">
                            <a asp-controller="ApplicationFoodPacks" asp-action="FoodPackPending" class="text-dark text-decoration-none fw-bold">
                                Request Now!
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Consultation Card -->
                <div class="col-lg-4 col-md-6 d-flex justify-content-center my-3">
                    <div class="card text-center border-0 shadow position-relative pt-6" style="width: 18rem; padding-top: 4.5rem;">
                        <!-- Floating Icon -->
                        <div class="card-icon position-absolute start-50 translate-middle-x rounded-circle p-3 bg-white border shadow" style="top: -25px;">
                            <img src="images/Consultation.png" alt="Consultation Icon" class="img-fluid" style="width: 50px; height: 50px;">
                        </div>
                        <div class="card-body d-flex flex-column justify-content-between px-3 pb-4 mt-3">
                            <h5 class="card-title fw-bold mb-3" style="color: #003049;">Consultation</h5>
                            <p class="card-text flex-grow-1" style="font-size: 1rem;">
                                Consultation for Solo Parents!
                            </p>
                            <hr class="text-secondary my-3">
                            <a asp-controller="Consultations" asp-action="ConsultationPending" class="text-dark text-decoration-none fw-bold">
                                Schedule Now!
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Certificate of Indigency Card -->
                <div class="col-lg-4 col-md-6 d-flex justify-content-center my-3">
                    <div class="card text-center border-0 shadow position-relative pt-6" style="width: 18rem; padding-top: 4.5rem;">
                        <!-- Floating Icon -->
                        <div class="card-icon position-absolute start-50 translate-middle-x rounded-circle p-3 bg-white border shadow" style="top: -25px;">
                            <img src="images/certificate.png" alt="Certificate Icon" class="img-fluid" style="width: 50px; height: 50px;">
                        </div>
                        <div class="card-body d-flex flex-column justify-content-between px-3 pb-4 mt-3">
                            <h5 class="card-title fw-bold mb-3" style="color: #003049;">Certificate of Indigency</h5>
                            <p class="card-text flex-grow-1" style="font-size: 1rem;">
                                This certificate proves the bearer qualifies for financial aid based on their economic status.
                            </p>
                            <hr class="text-secondary my-3">
                            <a asp-controller="Certificate_Of_Indigency" asp-action="CertificateOfIndigencyPending" class="text-dark text-decoration-none fw-bold">
                                Get Now!
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        </div>



    </div>
</div>
