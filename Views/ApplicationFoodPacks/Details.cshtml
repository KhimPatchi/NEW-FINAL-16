
@model SocialWelfarre.Models.ApplicationFoodPack

@{
    ViewData["Title"] = "Application Details";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    /* Blue Theme Design */
    body {
        background-color: #f0f4f8;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .details-section {
        margin-top: 40px;
    }

        .details-section h4 {
            color: #1a5f7a;
            font-weight: 600;
            border-bottom: 3px solid #1a5f7a;
            padding-bottom: 10px;
            margin-bottom: 30px;
        }

    /* Card Styling */
    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(26, 95, 122, 0.1);
        margin-bottom: 25px;
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(26, 95, 122, 0.15);
        }

    .card-body {
        padding: 25px;
    }

    .card-header {
        background-color: #1a5f7a;
        color: white;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        padding: 15px 25px;
    }

    .card-title {
        color: #1a5f7a;
        font-weight: 600;
        margin-bottom: 20px;
    }

    /* Form Fields */
    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        background-color: #e6f2f7;
        border: 1px solid #8bc6db;
        color: #1a5f7a;
        border-radius: 8px;
        padding: 12px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            background-color: #d1eaf3;
            border-color: #1a5f7a;
            box-shadow: 0 0 0 0.2rem rgba(26, 95, 122, 0.25);
        }

        .form-control[readonly] {
            background-color: #f0f8fa;
            cursor: default;
        }

    label {
        color: #1a5f7a;
        font-weight: 600;
        margin-bottom: 8px;
    }

    /* Image Styling */
    .details-section img {
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(26, 95, 122, 0.1);
        transition: all 0.3s ease;
        max-width: 100%;
        height: auto;
    }

        .details-section img:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(26, 95, 122, 0.15);
        }

    /* Action Buttons */
    .action-buttons {
        margin-top: 30px;
        text-align: center;
    }

        .action-buttons .btn {
            margin: 0 10px;
            border-radius: 8px;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #1a5f7a;
    }

        .btn-warning:hover {
            background-color: #1a5f7a;
            color: white;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    /* Icons */
    .details-section i {
        color: #1a5f7a;
        margin-right: 10px;
    }
</style>

<div class="details-section container">
    <h4><i class="fas fa-info-circle"></i> Application Details</h4>

    <div class="row">
        <!-- Personal Information Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title text-white mb-0"><i class="fas fa-user"></i> Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.FirstName)</label>
                        <input type="text" value="@Model.FirstName" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.MiddleName)</label>
                        <input type="text" value="@Model.MiddleName" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.LastName)</label>
                        <input type="text" value="@Model.LastName" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-birthday-cake"></i> @Html.DisplayNameFor(model => model.Age)</label>
                        <input type="text" value="@Model.Age" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-phone"></i> @Html.DisplayNameFor(model => model.ContactNumber)</label>
                        <input type="text" value="@Model.ContactNumber" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-home"></i> @Html.DisplayNameFor(model => model.Address)</label>
                        <input type="text" value="@Model.Address" readonly class="form-control" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Application Details Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title text-white mb-0"><i class="fas fa-boxes"></i> Application Details</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label><i class="fas fa-boxes"></i> @Html.DisplayNameFor(model => model.Packs)</label>
                        <input type="text" value="@Model.Packs" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-map-marker-alt"></i> @Html.DisplayNameFor(model => model.Barangay)</label>
                        <input type="text" value="@Model.Barangay" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-comment"></i> @Html.DisplayNameFor(model => model.Reason)</label>
                        <input type="text" value="@Model.Reason" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-info-circle"></i> @Html.DisplayNameFor(model => model.Status)</label>
                        <input type="text" value="@Model.Status" readonly class="form-control" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Uploaded Documents Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title text-white mb-0"><i class="fas fa-file-alt"></i> Uploaded Documents</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label><i class="fas fa-file-alt"></i> Barangay Certificate</label>
                        @if (!string.IsNullOrEmpty(Model.Brgy_Cert_Path))
                        {
                            var extension = System.IO.Path.GetExtension(Model.Brgy_Cert_Path)?.ToLower();
                            if (!string.IsNullOrEmpty(extension) && (extension == ".jpg" || extension == ".jpeg" || extension == ".png"))
                            {
                                <img src="@Url.Content(Model.Brgy_Cert_Path)" alt="@Model.Brgy_Cert" class="img-fluid" />
                            }
                            else
                            {
                                <input type="text" value="Non-image file: @Model.Brgy_Cert" readonly class="form-control" />
                            }
                        }
                        else
                        {
                            <input type="text" value="No file uploaded" readonly class="form-control" />
                        }
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-id-card"></i> Valid ID</label>
                        @if (!string.IsNullOrEmpty(Model.Valid_ID_Path))
                        {
                            var extension = System.IO.Path.GetExtension(Model.Valid_ID_Path)?.ToLower();
                            if (!string.IsNullOrEmpty(extension) && (extension == ".jpg" || extension == ".jpeg" || extension == ".png"))
                            {
                                <img src="@Url.Content(Model.Valid_ID_Path)" alt="@Model.Valid_ID" class="img-fluid" />
                            }
                            else
                            {
                                <input type="text" value="Non-image file: @Model.Valid_ID" readonly class="form-control" />
                            }
                        }
                        else
                        {
                            <input type="text" value="No file uploaded" readonly class="form-control" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
    </div>

    @if (User.IsInRole("Staff1") || User.IsInRole("Admin"))
    {
        <div class="card mt-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Process Application</h5>
                <!-- Success Alert -->
                <div id="successAlert" class="alert alert-success d-none" role="alert">
                    Consultation submitted successfully!
                </div>
            </div>
            <div class="card-body">
                <form asp-action="UpdateStatus" method="post" class="text-center" id="UpdateStatus" onsubmit="return handleSubmit(event)">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" name="status" value="Process" class="btn btn-success mr-3"><i class="fas fa-check"></i> Accept</button>
                    <button type="submit" name="status" value="Rejected" class="btn btn-danger"><i class="fas fa-times"></i> Reject</button>
                </form>
            </div>
        </div>
    }

    @if (User.IsInRole("Staff2") || User.IsInRole("Admin"))
    {
        <div class="card mt-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Accept Application</h5>
                <!-- Success Alert -->
                <div id="successAlert" class="alert alert-success d-none" role="alert">
                    Consultation submitted successfully!
                </div>
            </div>
            <div class="card-body">
                <form asp-action="UpdateStatus1" method="post" class="text-center" id="UpdateStatus1" onsubmit="return handleSubmit(event)">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" name="status" value="Accepted" class="btn btn-success mr-3"><i class="fas fa-check"></i> Accept</button>
                    <button type="submit" name="status" value="Rejected" class="btn btn-danger"><i class="fas fa-times"></i> Reject</button>
                </form>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script>
               function handleSubmit(event) {
            // Check if the form is valid
            if (document.getElementById("UpdateStatus").checkValidity()) {
                // Show success alert
                document.getElementById("successAlert").classList.remove("d-none");

                // Optionally, you can hide the alert after a few seconds
                setTimeout(function() {
                    document.getElementById("successAlert").classList.add("d-none");
                }, 3000);

                return true; // Allow form submission
            } else {
                event.preventDefault(); // Prevent form submission if not valid
                return false;
            }
        }

         function handleSubmit(event) {
            // Check if the form is valid
            if (document.getElementById("UpdateStatus1").checkValidity()) {
                // Show success alert
                document.getElementById("successAlert").classList.remove("d-none");

                // Optionally, you can hide the alert after a few seconds
                setTimeout(function() {
                    document.getElementById("successAlert").classList.add("d-none");
                }, 3000);

                return true; // Allow form submission
            } else {
                event.preventDefault(); // Prevent form submission if not valid
                return false;
            }
        }
    </script>
}