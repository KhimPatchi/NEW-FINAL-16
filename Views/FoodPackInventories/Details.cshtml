@model SocialWelfarre.Models.FoodPackInventory

@{
    ViewData["Title"] = "Food Pack Inventory Details";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .row dt {
        font-weight: 500;
        color: #343a40;
    }

    .row dd {
        margin-bottom: 10px;
    }

    .btn-primary, .btn-secondary {
        border-radius: 8px;
        padding: 10px 20px;
        margin-right: 10px;
    }
</style>

<div class="card">
    <div class="card-body">
        <h1><i class="fas fa-info-circle"></i> Inventory Record Details</h1>
        <h4>Food Pack Inventory</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ApplicationFoodPackId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApplicationFoodPackId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StockInId)
            </dt>
            <dd class="col-sm-10">
                @(Model.StockInId != null ? Model.StockInId : "No Stock")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalPacks)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalPacks)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StockLeft)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StockLeft)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RequestDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Barangay)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Barangay)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Packs)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Packs)
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fas fa-edit"></i> Edit</a>
            <a asp-action="Index" asp-controller="FoodPackInventories" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
        </div>
    </div>
</div>