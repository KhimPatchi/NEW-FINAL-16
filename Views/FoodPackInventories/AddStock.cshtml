@model SocialWelfarre.Models.StockIn_FoodPacks

@{
    ViewData["Title"] = "Add Stock";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}


<div class="card">
    <div class="card-body">
        <h4><i class="fas fa-plus-circle"></i> Add Stock to Food Packs</h4>
        <form asp-action="AddStock" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Add_Stock2" class="form-label"><i class="fas fa-boxes"></i> Number of Packs to Add</label>
                <input asp-for="Add_Stock2" class="form-control" type="number" placeholder="Enter number of packs" required />
                <span asp-validation-for="Add_Stock2" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-3"><i class="fas fa-save"></i> Add Stock</button>
            <a asp-action="Index" class="btn btn-secondary mt-3"><i class="fas fa-arrow-left"></i> Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}