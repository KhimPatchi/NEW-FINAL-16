@model SocialWelfarre.Models.FoodPackInventory

@{
    ViewData["Title"] = "Delete Food Pack Inventory";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .row dt {
        font-weight: 500;
        color: #343a40;
    }

    .row dd {
        margin-bottom: 10px;
    }

    .btn-danger {
        border-radius: 8px;
        padding: 10px 20px;
    }

    .btn-secondary {
        border-radius: 8px;
        padding: 10px 20px;
        margin-left: 10px;
    }
</style>

<div class="card">
    <div class="card-body">
        <h1><i class="fas fa-trash-alt"></i> Delete Inventory Record</h1>
        <h3>Are you sure you want to delete this inventory record?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ApplicationFoodPackId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApplicationFoodPackId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StockInId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StockInId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalPacks)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalPacks)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StockLeft)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StockLeft)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RequestDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Barangay)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Barangay)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Packs)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Packs)
            </dd>
        </dl>

        <form asp-controller="FoodPackInventory" asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
            <a asp-action="Index" asp-controller="FoodPackInventory" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}