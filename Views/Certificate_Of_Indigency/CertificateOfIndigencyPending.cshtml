@model SocialWelfarre.Models.Certificate_Of_Indigency

@{
    ViewData["Title"] = "Create Certificate of Indigency";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        body {
            background-color: #e9f2fb;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
        }

        h1, h4 {
            color: #0d6efd;
        }

        .container-box {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
            max-width: 800px;
            margin: 0 auto;
        }

        .form-select, .form-control {
            border-radius: 8px;
          
            font-size: 16px;
            border: 1px solid #ced4da;
        }

            .form-select:focus, .form-control:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 6px rgba(13, 110, 253, 0.3);
                outline: none;
            }

        .form-group label {
            font-weight: 600;
            color: #333;
        }

            .form-group label i {
                color: #0d6efd;
                margin-right: 5px;
            }

            .form-group label .required {
                color: red;
                margin-left: 3px;
            }

        .custom-file-upload {
            position: relative;
            display: inline-block;
            width: 100%;
        }

            .custom-file-upload input[type="file"] {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                opacity: 0;
                cursor: pointer;
            }

        .custom-file-label {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 10px 15px;
            background-color: #f0f8ff;
            color: #333;
            border: 1px solid #ced4da;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            text-align: center;
        }

            .custom-file-label:hover {
                background-color: #e6f0ff;
                border-color: #0d6efd;
            }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        .text-danger {
            margin-top: 5px;
            display: block;
        }

        .form-check {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <main class="container-box">
        <h1 class="mb-3">Create</h1>
        <h4 class="mb-4">Certificate Of Indigency</h4>
        <!-- Success Alert -->
        <div id="successAlert" class="alert alert-success d-none" role="alert">
            Consultation submitted successfully!
        </div>
        <form asp-action="CertificateOfIndigencyPending" id="CertificateOfIndigencyPending" enctype="multipart/form-data" onsubmit="return handleSubmit(event)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Full Name -->
            <div class="row">
                <div class="col-md-6 mb-3 form-group">
                    <label asp-for="FirstName1"><i class="fas fa-user"></i> First Name<span class="required">*</span></label>
                    <input asp-for="FirstName1" class="form-control" required />
                    <span asp-validation-for="FirstName1" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3 form-group">
                    <label asp-for="MiddleName1"><i class="fas fa-user"></i> Middle Name</label>
                    <input asp-for="MiddleName1" class="form-control" />
                    <span asp-validation-for="MiddleName1" class="text-danger"></span>
                </div>
            </div>

            <!-- Last Name and Age -->
            <div class="row">
                <div class="col-md-6 mb-3 form-group">
                    <label asp-for="LastName1"><i class="fas fa-user"></i> Last Name<span class="required">*</span></label>
                    <input asp-for="LastName1" class="form-control" required />
                    <span asp-validation-for="LastName1" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3 form-group">
                    <label asp-for="Age1"><i class="fas fa-birthday-cake"></i> Age<span class="required">*</span></label>
                    <input asp-for="Age1" class="form-control" type="number" required />
                    <span asp-validation-for="Age1" class="text-danger"></span>
                </div>
            </div>

            <!-- Barangay and No. Requested -->
            <div class="row">
                <div class="col-md-6 mb-3 form-group">
                    <label asp-for="Barangay1"><i class="fas fa-map-marker-alt"></i> Barangay<span class="required">*</span></label>
                    <select asp-for="Barangay1" class="form-select" asp-items="Html.GetEnumSelectList<Barangay>()" required>
                        <option value="">-- Select Barangay --</option>
                    </select>
                    <span asp-validation-for="Barangay1" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3 form-group">
                    <label asp-for="No_Rquested1"><i class="fas fa-envelope"></i> Request<span class="required">*</span></label>
                    <input asp-for="No_Rquested1" class="form-control" type="number" required />
                    <span asp-validation-for="No_Rquested1" class="text-danger"></span>
                </div>
            </div>

            <!-- Address and Contact -->
            <div class="row">
                <div class="col-md-6 mb-3 form-group">
                    <label asp-for="Address1"><i class="fas fa-home"></i> Address<span class="required">*</span></label>
                    <input asp-for="Address1" class="form-control" required />
                    <span asp-validation-for="Address1" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3 form-group">
                    <label asp-for="ContactNumber1"><i class="fas fa-phone"></i> Contact Number<span class="required">*</span></label>
                    <input asp-for="ContactNumber1" class="form-control" required />
                    <span asp-validation-for="ContactNumber1" class="text-danger"></span>
                </div>
            </div>

            <!-- File Uploads -->
            <div class="row">
                <div class="col-md-6 mb-3 form-group">
                    <label for="brgyCertFile"><i class="fas fa-file-alt"></i> Barangay Certificate<span class="required">*</span></label>
                    <div class="custom-file-upload">
                        <input type="file" name="brgyCertFile" id="brgyCertFile" accept=".jpg,.jpeg,.png,.pdf" required />
                        <label for="brgyCertFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                    </div>
                    <span class="text-danger" asp-validation-for="Brgy_Cert1"></span>
                </div>
                <div class="col-md-6 mb-3 form-group">
                    <label for="validIdFile"><i class="fas fa-id-card"></i> Valid ID<span class="required">*</span></label>
                    <div class="custom-file-upload">
                        <input type="file" name="validIdFile" id="validIdFile" accept=".jpg,.jpeg,.png,.pdf" required />
                        <label for="validIdFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                    </div>
                    <span class="text-danger" asp-validation-for="Valid_ID1"></span>
                </div>
            </div>

            <!-- Reason -->
            <div class="row">
                <div class="col-md-6 mb-3 form-group">
                    <label asp-for="Reason1"><i class="fas fa-comment"></i> Reason<span class="required">*</span></label>
                    <select asp-for="Reason1" class="form-select" asp-items="Html.GetEnumSelectList<Reason1>()" required>
                        <option value="">-- Select Reason --</option>
                    </select>
                    <span asp-validation-for="Reason1" class="text-danger"></span>
                </div>
            </div>

            <!-- Terms -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="agreeTerms" required />
                <label class="form-check-label" for="agreeTerms">
                    I agree to the <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">Terms & Conditions</a> and <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">Privacy Policy</a><span class="required">*</span>.
                </label>
            </div>

            <!-- Submit -->
            <div class="form-group text-end">
                <input type="submit" value="Create" class="btn btn-primary px-4" />
            </div>
        </form>

        <div class="mt-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
        </div>
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }

    <script>
        // Show selected file name
        document.querySelectorAll('.custom-file-upload input[type="file"]').forEach(input => {
            input.addEventListener('change', function () {
                const label = this.nextElementSibling;
                const fileName = this.files.length > 0 ? this.files[0].name : 'Choose File';
                label.innerHTML = `<i class="fas fa-upload"></i> ${fileName}`;
            });
        });

        function handleSubmit(event) {
            // Check if the form is valid
            if (document.getElementById("CertificateOfIndigencyPending").checkValidity()) {
                // Show success alert
                document.getElementById("successAlert").classList.remove("d-none");

                // Optionally, you can hide the alert after a few seconds
                setTimeout(function() {
                    document.getElementById("successAlert").classList.add("d-none");
                }, 3000);

                return true; // Allow form submission
            } else {
                event.preventDefault(); // Prevent form submission if not valid
                return false;
            }
        }
    </script>

</body>
</html>
