@model IEnumerable<SocialWelfarre.Models.ApplicationUser>

@{
    ViewData["Title"] = "Users Management";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"><i class="fas fa-users mr-2"></i> Users Management</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card card-primary card-outline">
            <div class="card-body">
                <!-- Tab Navigation -->
                <ul class="nav nav-tabs" id="userTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="active-tab" data-bs-toggle="tab" data-bs-target="#active-users" type="button" role="tab" aria-controls="active-users" aria-selected="true">
                            <i class="fas fa-user-check mr-1"></i> Active Users
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="archived-tab" data-bs-toggle="tab" data-bs-target="#archived-users" type="button" role="tab" aria-controls="archived-users" aria-selected="false">
                            <i class="fas fa-archive mr-1"></i> Archived Users
                        </button>
                    </li>
                </ul>

                <!-- Tab Content -->
                <div class="tab-content mt-0" id="userTabContent">
                    <!-- Active Users Tab -->
                    <div class="tab-pane fade show active" id="active-users" role="tabpanel" aria-labelledby="active-tab">
                        <div class="table-responsive">
                            <table id="activeUsersTable" class="table table-striped table-bordered table-hover" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>EmpNo</th>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Gender</th>
                                        <th>Role</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.Where(u => !u.IsArchived))
                                    {
                                        <tr>
                                            <td>@user.EmpNo</td>
                                            <td>@user.FullName</td>
                                            <td>@user.Email</td>
                                            <td>@user.Gender</td>
                                            <td>
                                                @if (ViewBag.UserRoles != null && ViewBag.UserRoles.ContainsKey(user.Id))
                                                {
                                                    var roles = ViewBag.UserRoles[user.Id];
                                                    @string.Join(", ", roles)
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Archive" asp-route-id="@user.Id" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-archive"></i> Archive
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Archived Users Tab -->
                    <div class="tab-pane fade" id="archived-users" role="tabpanel" aria-labelledby="archived-tab">
                        <div class="table-responsive">
                            <table id="archivedUsersTable" class="table table-striped table-bordered table-hover" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>EmpNo</th>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Gender</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.Where(u => u.IsArchived))
                                    {
                                        <tr>
                                            <td>@user.EmpNo</td>
                                            <td>@user.FullName</td>
                                            <td>@user.Email</td>
                                            <td>@user.Gender</td>
                                            <td>
                                                <a asp-action="Unarchive" asp-route-id="@user.Id" class="btn btn-success btn-sm">
                                                    <i class="fas fa-trash-restore"></i> Unarchive
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#activeUsersTable').DataTable({
                responsive: true,
                language: {
                    searchPlaceholder: "Search active users...",
                    lengthMenu: "Show _MENU_ users",
                    info: "Showing _START_ to _END_ of _TOTAL_ users",
                    infoEmpty: "No users found",
                    infoFiltered: "(filtered from _MAX_ total users)"
                }
            });

            $('#archivedUsersTable').DataTable({
                responsive: true,
                language: {
                    searchPlaceholder: "Search archived users...",
                    lengthMenu: "Show _MENU_ users",
                    info: "Showing _START_ to _END_ of _TOTAL_ users",
                    infoEmpty: "No users found",
                    infoFiltered: "(filtered from _MAX_ total users)"
                }
            });

            if (location.hash) {
                const triggerEl = document.querySelector(`[data-bs-target="${location.hash}"]`);
                if (triggerEl) {
                    const tab = new bootstrap.Tab(triggerEl);
                    tab.show();
                }
            }

            const tabButtons = document.querySelectorAll('button[data-bs-toggle="tab"]');
            tabButtons.forEach(button => {
                button.addEventListener('shown.bs.tab', function (event) {
                    history.replaceState(null, null, event.target.getAttribute('data-bs-target'));
                });
            });
        });
    </script>
}

<style>
