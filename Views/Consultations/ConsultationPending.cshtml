@{
    ViewData["Title"] = "Create Consultation";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Social Welfare System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #e7f0fd;
            padding: 30px;
            font-family: 'Segoe UI', sans-serif;
        }

        h1, h4 {
            color: #0d6efd;
        }

        .card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
            padding: 20px;
        }

        .custom-file-upload input[type="file"] {
            display: none;
        }

        .custom-file-label {
            display: inline-block;
            padding: 10px 15px;
            background-color: #e3f2fd;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            border: 1px solid #b6d4fe;
            text-align: center;
        }

            .custom-file-label:hover {
                background-color: #d0e7ff;
            }

        .btn-primary {
            border-radius: 20px;
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        .form-label i {
            margin-right: 5px;
            color: #0d6efd;
        }

        .text-danger {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Create Consultation</h1>

        <!-- Success Alert -->
        <div id="successAlert" class="alert alert-success d-none" role="alert">
            Consultation submitted successfully!
        </div>

        <div class="card">
            <div class="card-body">
                <h4><i class="fas fa-plus-circle"></i> Add New Consultation</h4>
                <hr />
                <form asp-action="ConsultationPending" id="ConsultationPending" method="post" enctype="multipart/form-data" onsubmit="return handleSubmit(event)">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Grid Layout -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><i class="fas fa-user"></i> First Name <span class="text-danger">*</span></label>
                            <input name="First_Name2" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><i class="fas fa-user"></i> Middle Name <span class="text-danger">*</span></label>
                            <input name="Middle_Name2" class="form-control" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><i class="fas fa-user"></i> Last Name <span class="text-danger">*</span></label>
                            <input name="Last_Name2" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><i class="fas fa-phone"></i> Contact Number <span class="text-danger">*</span></label>
                            <input name="ContactNumber2" class="form-control" placeholder="09xx-xxx-xxxx" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><i class="fas fa-file-alt"></i> Barangay Certificate <span class="text-danger">*</span></label>
                            <div class="custom-file-upload">
                                <input type="file" name="brgyCertFile" id="brgyCertFile" accept=".jpg,.jpeg,.png,.pdf" required />
                                <label for="brgyCertFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><i class="fas fa-file-alt"></i> Proof of Solo Parent <span class="text-danger">*</span></label>
                            <div class="custom-file-upload">
                                <input type="file" name="proofSoloParentFile" id="proofSoloParentFile" accept=".jpg,.jpeg,.png,.pdf" required />
                                <label for="proofSoloParentFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><i class="fas fa-file-alt"></i> Child Birth Certificate <span class="text-danger">*</span></label>
                            <div class="custom-file-upload">
                                <input type="file" name="birthCertFile" id="birthCertFile" required />
                                <label for="birthCertFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><i class="fas fa-id-card"></i> Valid ID <span class="text-danger">*</span></label>
                            <div class="custom-file-upload">
                                <input type="file" name="validIdFile" id="validIdFile" required />
                                <label for="validIdFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><i class="fas fa-image"></i> 1x1 Picture <span class="text-danger">*</span></label>
                            <div class="custom-file-upload">
                                <input type="file" name="x1PicFile" id="x1PicFile" required />
                                <label for="x1PicFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label"><i class="fas fa-calendar-alt"></i> Date <span class="text-danger">*</span></label>
                            <input name="Consultation_Date" class="form-control" type="date" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><i class="fas fa-clock"></i> Time <span class="text-danger">*</span></label>
                            <input name="Consultation_Time" class="form-control" type="time" required />
                        </div>
                    </div>

                    <input type="hidden" name="Consultation_status" value="Pending" />

                    <div class="form-check mt-3">
                        <input class="form-check-input" type="checkbox" required id="termsCheck">
                        <label class="form-check-label" for="termsCheck">
                            I agree to the <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">Terms and Conditions</a> <span class="text-danger">*</span>
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary mt-3"><i class="fas fa-save"></i> Submit Consultation</button>
                </form>
            </div>
        </div>

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>

    <!-- Terms Modal -->
    <div class="modal fade" id="termsModal" tabindex="-1" aria-labelledby="termsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="termsModalLabel">Terms and Privacy Policy</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Privacy Notice:</strong> Your data is collected solely for the purpose of consultation and assistance with the City Social Welfare and Development Office in the Philippines.</p>
                    <p>We ensure compliance with the Data Privacy Act of 2012 and maintain strict confidentiality of your personal information.</p>
                    <p>By submitting this form, you authorize us to process and use the provided data to facilitate consultation services, communicate updates, and generate official records.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">I Understand</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <!-- JavaScript to show success alert on successful form submission -->
    <script>
        function handleSubmit(event) {
            // Check if the form is valid
            if (document.getElementById("ConsultationPending").checkValidity()) {
                // Show success alert
                document.getElementById("successAlert").classList.remove("d-none");

                // Optionally, you can hide the alert after a few seconds
                setTimeout(function() {
                    document.getElementById("successAlert").classList.add("d-none");
                }, 3000);

                return true; // Allow form submission
            } else {
                event.preventDefault(); // Prevent form submission if not valid
                return false;
            }
        }
    </script>
</body>
</html>
