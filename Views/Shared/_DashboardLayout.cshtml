    <!-- Custom Sidebar Script -->
    <script>
        $(document).ready(function () {
            console.log("Sidebar script initialized");

            // Prevent AdminLTE default treeview behavior
            $('[data-widget="treeview"]').off('click');

            // Handle child link clicks to prevent dropdown closure
            $('.nav-treeview .nav-link').on('click', function (e) {
                e.stopPropagation(); // Prevent the click from bubbling to the parent
                console.log("Treeview item clicked:", $(this).text());

                // Highlight the clicked link
                $('.nav-link').removeClass('active');
                $(this).addClass('active');

                // If the clicked link is under "Dashboard", ensure the dropdown state is saved
                const $parentTreeview = $(this).closest('.nav-item.has-treeview');
                const parentText = $parentTreeview.find('> a.nav-link p').text().trim();
                if (parentText === "Dashboard" && $parentTreeview.hasClass('menu-open')) {
                    localStorage.setItem('dashboardDropdownOpen', 'true');
                }
            });

            // Handle dropdown toggle only for parent links
            $('.nav-item.has-treeview > a.nav-link').on('click', function (e) {
                e.preventDefault();
                e.stopPropagation();
                const $parent = $(this).parent('.nav-item');
                const isOpen = $parent.hasClass('menu-open');
                const parentText = $parent.find('p').first().text().trim();

                console.log("Dropdown clicked:", parentText, "Is open:", isOpen);

                // Close all other dropdowns
                $('.nav-item.has-treeview').not($parent).removeClass('menu-open');
                $('.nav-item.has-treeview').not($parent).find('.nav-treeview').slideUp(200);

                // Toggle current dropdown
                if (!isOpen) {
                    $parent.addClass('menu-open');
                    $parent.find('.nav-treeview').slideDown(200);
                    // Save state for "Dashboard"
                    if (parentText === "Dashboard") {
                        localStorage.setItem('dashboardDropdownOpen', 'true');
                    }
                } else {
                    $parent.removeClass('menu-open');
                    $parent.find('.nav-treeview').slideUp(200);
                    // Clear state for "Dashboard"
                    if (parentText === "Dashboard") {
                        localStorage.setItem('dashboardDropdownOpen', 'false');
                    }
                }
            });

            // Restore "Dashboard" dropdown state from localStorage
            const dashboardDropdownState = localStorage.getItem('dashboardDropdownOpen');
            if (dashboardDropdownState === 'true') {
                const $dashboardTreeview = $('.nav-item.has-treeview').has('a.nav-link:contains("Dashboard")');
                if ($dashboardTreeview.length) {
                    console.log("Restoring Dashboard dropdown state: open");
                    $dashboardTreeview.addClass('menu-open');
                    $dashboardTreeview.find('.nav-treeview').show();
                }
            }

            // Open the dropdown if a child link is active on page load, except for "Dashboard"
            const activeChildLink = $('.nav-treeview .nav-link.active');
            if (activeChildLink.length) {
                const $parentTreeview = activeChildLink.closest('.nav-item.has-treeview');
                const parentText = $parentTreeview.find('> a.nav-link p').text().trim();
                if ($parentTreeview.length && parentText !== "Dashboard") {
                    console.log("Opening dropdown for active child:", activeChildLink.text());
                    $parentTreeview.addClass('menu-open');
                    $parentTreeview.find('.nav-treeview').show();
                }
            }

            // Highlight the active link
            const activeLink = $('.nav-link.active');
            if (activeLink.length) {
                console.log("Active link found:", activeLink.text());
                activeLink.addClass('active');
            }
        });
    </script>

