@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Using Tailwind CSS via CDN for development; for production, install Tailwind locally as a PostCSS plugin or use Tailwind CLI -->
    <script src="https://cdn.tailwindcss.com/3.4.16"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#4f46e5',
                        secondary: '#6366f1'
                    },
                    borderRadius: {
                        'none': '0px',
                        'sm': '4px',
                        DEFAULT: '8px',
                        'md': '12px',
                        'lg': '16px',
                        'xl': '20px',
                        '2xl': '24px',
                        '3xl': '32px',
                        'full': '9999px',
                        'button': '8px'
                    }
                }
            }
        }
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="~/css/DashboardLayout.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="~/images/logo-New.png">
</head>
<body class="bg-gray-50 flex h-screen">
    <!-- Sidebar -->
    <aside class="sidebar bg-white w-64 h-full flex flex-col shadow-lg">
        <!-- Logo and User Info -->
        <div class="p-6 flex flex-col items-center border-b border-gray-100">
            <div class="w-16 h-16 flex items-center justify-center rounded-full bg-primary/5 mb-4">
                <img src="~/images/logo-New.png" alt="CSWDO Logo" class="w-10 h-10 object-contain" />
            </div>
            <span class="font-semibold text-gray-800">@User.Identity?.Name</span>
            <form asp-area="Identity" asp-page="/Account/Manage/Index" method="get" class="text-sm text-primary hover:underline flex items-center gap-1 mt-1">
                <i class="ri-settings-3-line"></i> Manage Account
            </form>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 overflow-y-auto py-4">
            <ul class="px-3 space-y-1">
                <!-- Dashboard -->
                <li>
                    <a asp-controller="Dashboard" asp-action="AllDashboard" class="sidebar-item active flex items-center px-4 py-3 text-gray-700 rounded">
                        <div class="w-5 h-5 flex items-center justify-center mr-3 text-primary">
                            <i class="ri-dashboard-line"></i>
                        </div>
                        <span>Dashboard</span>
                    </a>
                </li>
                <!-- Food Pack Inventory Dashboard -->
                <li>
                    <a asp-controller="FoodPackInventories" asp-action="Dashboard" class="sidebar-item flex items-center px-4 py-3 text-gray-700 rounded">
                        <div class="w-5 h-5 flex items-center justify-center mr-3 text-gray-500">
                            <i class="ri-file-list-3-line"></i>
                        </div>
                        <span>Food Pack Inventory Dashboard</span>
                    </a>
                </li>
                <!-- Food Pack Inventory Dashboard -->
                <li>
                    <a asp-controller="DisasterKitInventories" asp-action="Dashboard" class="sidebar-item flex items-center px-4 py-3 text-gray-700 rounded">
                        <div class="w-5 h-5 flex items-center justify-center mr-3 text-gray-500">
                            <i class="ri-file-list-3-line"></i>
                        </div>
                        <span>Disaster Kit Inventory Dashboard</span>
                    </a>
                </li>
                <!-- Users -->
                <li>
                    <div class="sidebar-item dropdown-trigger flex items-center justify-between px-4 py-3 text-gray-700 rounded cursor-pointer">
                        <div class="flex items-center">
                            <div class="w-5 h-5 flex items-center justify-center mr-3 text-gray-500">
                                <i class="ri-user-line"></i>
                            </div>
                            <span>Users</span>
                        </div>
                        <div class="w-5 h-5 flex items-center justify-center dropdown-icon">
                            <i class="ri-arrow-right-s-line"></i>
                        </div>
                    </div>
                    <ul class="dropdown-content ml-7 pl-4 border-l border-gray-100">
                        <li>
                            <a asp-controller="Users" asp-action="ViewCreate" class="flex items-center px-4 py-2 text-sm text-gray-600 rounded hover:text-primary">
                                <div class="w-4 h-4 flex items-center justify-center mr-2">
                                    <i class="ri-list-check"></i>
                                </div>
                                <span>List of Users</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Users" asp-action="CreateUsers" class="flex items-center px-4 py-2 text-sm text-gray-600 rounded hover:text-primary">
                                <div class="w-4 h-4 flex items-center justify-center mr-2">
                                    <i class="ri-user-add-line"></i>
                                </div>
                                <span>Create User</span>
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Food Pack -->
                <li>
                    <div class="sidebar-item dropdown-trigger flex items-center justify-between px-4 py-3 text-gray-700 rounded cursor-pointer">
                        <div class="flex items-center">
                            <div class="w-5 h-5 flex items-center justify-center mr-3 text-gray-500">
                                <i class="ri-shopping-basket-line"></i>
                            </div>
                            <span>Food Pack</span>
                        </div>
                        <div class="w-5 h-5 flex items-center justify-center dropdown-icon">
                            <i class="ri-arrow-right-s-line"></i>
                        </div>
                    </div>
                    <ul class="dropdown-content ml-7 pl-4 border-l border-gray-100">
                        <li>
                            <a asp-controller="ApplicationFoodPacks" asp-action="Index" class="flex items-center px-4 py-2 text-sm text-gray-600 rounded hover:text-primary">
                                <div class="w-4 h-4 flex items-center justify-center mr-2">
                                    <i class="ri-exchange-line"></i>
                                </div>
                                <span>Transaction</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="FoodPackInventories" asp-action="Index" class="flex items-center px-4 py-2 text-sm text-gray-600 rounded hover:text-primary">
                                <div class="w-4 h-4 flex items-center justify-center mr-2">
                                    <i class="ri-store-line"></i>
                                </div>
                                <span>Inventory</span>
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Certificate of Indigency -->
                <li>
                    <a asp-controller="Certificate_Of_Indigency" asp-action="Index" class="sidebar-item flex items-center px-4 py-3 text-gray-700 rounded">
                        <div class="w-5 h-5 flex items-center justify-center mr-3 text-gray-500">
                            <i class="ri-file-list-3-line"></i>
                        </div>
                        <span>Certificate of Indigency</span>
                    </a>
                </li>

                <!-- Solo Parent -->
                <li>
                    <a asp-controller="Consultations" asp-action="Index" class="sidebar-item flex items-center px-4 py-3 text-gray-700 rounded">
                        <div class="w-5 h-5 flex items-center justify-center mr-3 text-gray-500">
                            <i class="ri-parent-line"></i>
                        </div>
                        <span>Solo Parent ID</span>
                    </a>
                </li>

                <!-- Disaster Kit -->
                <li>
                    <div class="sidebar-item dropdown-trigger flex items-center justify-between px-4 py-3 text-gray-700 rounded cursor-pointer">
                        <div class="flex items-center">
                            <div class="w-5 h-5 flex items-center justify-center mr-3 text-gray-500">
                                <i class="ri-first-aid-kit-line"></i>
                            </div>
                            <span>Disaster Kit</span>
                        </div>
                        <div class="w-5 h-5 flex items-center justify-center dropdown-icon">
                            <i class="ri-arrow-right-s-line"></i>
                        </div>
                    </div>
                    <ul class="dropdown-content ml-7 pl-4 border-l border-gray-100">
                        <li>
                            <a asp-controller="DisasterKitTransactions" asp-action="Index" class="flex items-center px-4 py-2 text-sm text-gray-600 rounded hover:text-primary">
                                <div class="w-4 h-4 flex items-center justify-center mr-2">
                                    <i class="ri-exchange-line"></i>
                                </div>
                                <span>Transaction</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="DisasterKitInventories" asp-action="Index" class="flex items-center px-4 py-2 text-sm text-gray-600 rounded hover:text-primary">
                                <div class="w-4 h-4 flex items-center justify-center mr-2">
                                    <i class="ri-store-line"></i>
                                </div>
                                <span>Inventory</span>
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Audit Trails -->
                <li>
                    <a asp-controller="AuditTrails" asp-action="Index" class="sidebar-item flex items-center px-4 py-3 text-gray-700 rounded">
                        <div class="w-5 h-5 flex items-center justify-center mr-3 text-gray-500">
                            <i class="ri-history-line"></i>
                        </div>
                        <span>Audit Trails</span>
                    </a>
                </li>

                <!-- Reports -->
                <li>
                    <a asp-controller="Reports" asp-action="Index" class="sidebar-item flex items-center px-4 py-3 text-gray-700 rounded">
                        <div class="w-5 h-5 flex items-center justify-center mr-3 text-gray-500">
                            <i class="ri-file-chart-line"></i>
                        </div>
                        <span>Reports</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Logout -->
        <div class="p-4 border-t border-gray-100">
            <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                <button type="submit" class="!rounded-button w-full flex items-center justify-center gap-2 px-4 py-2.5 text-white bg-primary hover:bg-primary/90 transition-colors">
                    <div class="w-5 h-5 flex items-center justify-center">
                        <i class="ri-logout-box-line"></i>
                    </div>
                    <span class="whitespace-nowrap">Logout</span>
                </button>
            </form>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-6 overflow-y-auto">
        @RenderBody()
    </main>

    <!-- Include jQuery before validation scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle dropdown toggles
            const dropdownTriggers = document.querySelectorAll('.dropdown-trigger');

            dropdownTriggers.forEach(trigger => {
                trigger.addEventListener('click', function() {
                    const dropdownContent = this.nextElementSibling;
                    const dropdownIcon = this.querySelector('.dropdown-icon');

                    dropdownContent.classList.toggle('open');
                    dropdownIcon.classList.toggle('open');
                });
            });

            // Mobile sidebar toggle
            const sidebarToggle = document.createElement('button');
            sidebarToggle.classList.add('sidebar-toggle', 'fixed', 'top-4', 'left-4', 'p-2', 'bg-primary', 'text-white', 'rounded', 'lg:hidden');
            sidebarToggle.innerHTML = '<i class="ri-menu-line"></i>';
            document.body.appendChild(sidebarToggle);

            sidebarToggle.addEventListener('click', function() {
                const sidebar = document.querySelector('.sidebar');
                sidebar.classList.toggle('open');
            });

            // Set first dropdown open by default
            const firstDropdown = document.querySelector('.dropdown-trigger');
            const firstDropdownContent = firstDropdown.nextElementSibling;
            const firstDropdownIcon = firstDropdown.querySelector('.dropdown-icon');

            firstDropdownContent.classList.add('open');
            firstDropdownIcon.classList.add('open');
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>